<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="appBarLayoutStyle">@style/AppBarLayout</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="MaterialButtonOutline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/material_button_colors</item>
        <item name="android:textColor">@color/material_button_colors</item>
    </style>

    <style name="AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/MaterialDialogCorner</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialogTitleColor</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialDialogBodyColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialogButtonNegative</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialogButtonPositive</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>


    <style name="MaterialDialogCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MaterialDialogTitleColor" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialDialogBodyColor" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialDialogButtonNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MaterialDialogButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>